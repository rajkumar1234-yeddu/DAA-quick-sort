#include <stdio.h>

void swap(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

int partition(int a[], int l, int h) {
  
    int po = a[h];
    int i = (l-1);

    for (int j = l; j < h; j++) {
        if (a[j] <= po) {
            i++;
        swap(&a[i], &a[j]);
        }
    }
    swap(&a[i+1], &a[h]);
    return (i+1);
}

void quickSort(int a[], int l, int h) {
    if (l < h) {
        int po = partition(a, l, h);
        quickSort(a, l, po-1);
        quickSort(a, po+1, h);
    }
}

int main() {
    int n;
    printf("Enter no of elements in array :");
    scanf("%d",&n);
    int a[n],t;
    printf("Enter array elements:\n");
    for(int i=0; i<n; i++){
        scanf("%d", &t);
        a[i]=t;
    }
    printf("Unsorted Array is :\n");
    for(int i=0; i<n; i++){
        printf("%d ",a[i]);
    }
    printf("\n");
    quickSort(a, 0, n-1);
    printf("Sorted array is : \n");
    for(int i=0; i<n; i++){
        printf("%d ",a[i]);
    }
}
